<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ToolCommandName>jsonmerge</ToolCommandName>
    <Version>1.0</Version>
    <Authors>Ihor Nechyporuk</Authors>
    <Copyright>Copyright (C) Ihor Nechyporuk</Copyright>
    <Description>Simple JSON merge tool</Description>
    <PackageTags>json merge global-tool</PackageTags>
    <PackageProjectUrl>https://github.com/inech/JsonMerge</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/inech/JsonMerge</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageRequireLicenseAcceptance>False</PackageRequireLicenseAcceptance>
    <PackAsTool>true</PackAsTool>
    <PackageOutputPath>./nupkg</PackageOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
  </ItemGroup>

</Project>
